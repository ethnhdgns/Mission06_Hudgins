@model List<Mission06_Hudgins.Models.Movie>

<div class="container">
    <h2>Movie List</h2>
    
    @* bootstrap classes! *@
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
        <tr>
            <th>Title</th>
            <th>Category ID</th>
            <th>Year</th>
            <th>Director</th>
            <th>Rating</th>
            <th>Edited</th>
            <th>Lent To</th>
            <th>Copied to Plex</th>
            <th>Notes</th>
            <th>Actions</th> <!-- this is where i'll put the add/delete buttons -->
        </tr>
        </thead>
        <tbody>
        
        @* loop thru each row *@
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Title</td>
                <td>@movie.CategoryID</td>
                <td>@movie.Year</td>
                <td>@movie.Director</td>
                <td>@movie.Rating</td>
                <td>
                    <input type="checkbox" disabled @(movie.Edited ? "checked" : "")/>
                </td>
                <td>@movie.LentTo</td>
                <td>
                    <input type="checkbox" disabled @(movie.CopiedToPlex ? "checked" : "")/>
                </td>
                <td>@movie.Notes</td>
                <td>
                    <!-- Edit Button -->
                    <a href="@Url.Action("EditMovie", "Home", new { id = movie.MovieID })" class="btn btn-primary btn-sm"> Edit </a>
                    <!-- Delete Button -->
                    <a href="@Url.Action("Delete", "Home", new { id = movie.MovieID })" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this movie?')"> Delete </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
