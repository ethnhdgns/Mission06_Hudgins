@model Mission06_Hudgins.Models.Movie

<div class="container">
    <h2>Edit Movie</h2>
    <form asp-action="EditMovie" method="post">
        <input type="hidden" asp-for="MovieID" />

        <div class="form-group">
            <label asp-for="Title">Title:</label>
            <input asp-for="Title" type="text" class="form-control" required />
        </div>

        <div class="form-group">
            <label asp-for="CategoryID">Category ID:</label>
            <input asp-for="CategoryID" type="number" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Year">Year:</label>
            <input asp-for="Year" type="number" class="form-control" min="1888" required />
        </div>

        <div class="form-group">
            <label asp-for="Director">Director:</label>
            <input asp-for="Director" type="text" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Rating">Rating:</label>
            <input asp-for="Rating" type="text" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Edited">Edited:</label>
            <input asp-for="Edited" type="checkbox" />
        </div>

        <div class="form-group">
            <label asp-for="LentTo">Lent To:</label>
            <input asp-for="LentTo" type="text" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="CopiedToPlex">Copied to Plex:</label>
            <input asp-for="CopiedToPlex" type="checkbox" />
        </div>

        <div class="form-group">
            <label asp-for="Notes">Notes:</label>
            <input asp-for="Notes" type="text" class="form-control" />
        </div>
        <br/>
        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a href="@Url.Action("MovieList", "Home")" class="btn btn-secondary">Cancel</a>
    </form>
</div>