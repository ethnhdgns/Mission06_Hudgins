@model Movie;
@{
    ViewData["Title"] = "Add a Movie";
}
<div class="container">
    <h2>@ViewData["Title"]</h2>
    <form method="post" asp-controller="Home" asp-action="AddMovie">
        <div class="form-group">
            <label asp-for="Category">Category:</label>
            <input asp-for="Category" class="form-control">
        </div>

        <div class="form-group">
            <label asp-for="Title">Title:</label>
            <input asp-for="Title" class="form-control" required>
        </div>

        @* required and nothing less than 1888 *@
        <div class="form-group">
            <label asp-for="Year">Year:</label>
            <input asp-for="Year" class="form-control" type="number" min="1888" maxlength="4" required>
        </div>

        <div class="form-group">
            <label asp-for="Director">Director:</label>
            <input asp-for="Director" class="form-control">
        </div>

        @* dropdown *@
        <div class="form-group">
            <label asp-for="Rating">Rating:</label>
            <select asp-for="Rating" class="form-control">
                <option value="G">G</option>
                <option value="PG">PG</option>
                <option value="PG-13">PG-13</option>
                <option value="R">R</option>
            </select>
        </div>

        @* cant require this here cuz it's a checkbox *@
        <div class="form-group">
            <label asp-for="Edited">Edited:</label>
            <input asp-for="Edited" type="checkbox">
        </div>

        <div class="form-group">
            <label asp-for="LentTo">Lent To:</label>
            <input asp-for="LentTo" class="form-control">
        </div>
        
        @* cant require this here cuz it's a checkbox *@
        <div class="form-group">
            <label asp-for="CopiedToPlex">Copied to Plex:</label>
            <input asp-for="CopiedToPlex" type="checkbox" />
        </div>
        
        <div class="form-group">
            <label asp-for="Notes">Notes:</label>
            <input asp-for="Notes" class="form-control" maxlength="25">
        </div>
        <br/>
        <button type="submit" class="btn btn-primary">Add Movie</button>
        @* takes us back to home page if we cancel *@
        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Cancel</a>
    </form>
</div>
